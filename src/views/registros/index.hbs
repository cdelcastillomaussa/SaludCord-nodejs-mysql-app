<h2>Listado de Registros</h2>
<div class="container p-2">
    <div class="alert alert-primary">
        <a href="/registros/add" class="btn btn-primary">Registrarse</a>
    </div>    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>N</th>
                <th>Identificacion</th>
                <th>Nombre completo</th>
                <th>Fecha</th>
                <th>EPS</th>
                <th>Genero</th>
                <th>username</th>
                <th>password</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each registros}} 
               
                <tr>
                    <td>{{id}}</td>
                    <td>{{identificacion}}</td>
                    <td>{{fullname}}</td> 
                    <td>{{fecha}}</td>
                    <td>{{EPS}}</td>
                    <td>{{genero}}</td>
                    <td>{{username}}</td>                   
                    <td> {{password}} </td>
                    <td>
                        <a class="btn btn-warning btn-block" href="/registros/edit/{{id}}">Editar</a>
                        <a class="btn btn-danger" href="/registros/delete/{{id}}">Eliminar</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="7">
                        <div class="alert alert-warning">
                            No se encontraron registros
                        </div>
                    </td>
                </tr>
            {{/each}}
                
                               
                       
        </tbody>    
    </table>    
</div>